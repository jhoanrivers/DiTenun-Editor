<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentCustom">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="600dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:padding="10dp"
        >

        <RelativeLayout
            android:id="@+id/hw"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            >
            <TextView
                android:id="@+id/hsd"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Atur Ukuran Template"
                android:textColorHint="@color/black"
                android:textSize="20dp"
                android:textColor="@color/black50"
                />
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_below="@+id/hsd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <EditText
                    android:id="@+id/heightsizeid"
                    android:layout_below="@id/hsd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:hint="Height"
                    android:textSize="20dp"
                    android:inputType="number"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/widthsizeid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:ems="5"
                    android:hint="Width"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="20dp" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pwt"
            android:layout_below="@id/hw"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            >
            <TextView
                android:id="@+id/tc"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Pilih warna tengah"
                android:textSize="20dp"
                android:textColor="@color/black50"
                />
            <LinearLayout
                android:layout_below="@+id/tc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/background">
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pws"
            android:layout_below="@id/pwt"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/ts"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Pilih warna sisi"
                android:textSize="24dp"
                android:textColor="@color/black50"
                />
            <LinearLayout
                android:layout_below="@+id/ts"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/background">
            </LinearLayout>


        </RelativeLayout>

        <Button
            android:id="@+id/btnselesai"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Selesai"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"/>

    </RelativeLayout>

</FrameLayout>