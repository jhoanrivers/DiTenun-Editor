<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen2"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dengan menekan tombol yang berada di sebelah kiri, maka akan muncul list template yang akan dipilih untuk mendesain ulos baru"
            android:textSize="18dp"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:src="@drawable/choosetemplate"
            />

        <TextView
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anda dapat memilih template yang anda inginkan, termasuk custom, dimana pengguna dapat mendesain ulos buatannya sendiri"/>
    </LinearLayout>



</RelativeLayout>